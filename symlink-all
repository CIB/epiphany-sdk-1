# This script builds a symlink tree of all components, creating symlinks
# for any file that is not a directory.
#
# Usage:
#
#   symlink-all <unisrc> <component1> <component2> ...

absolutedir() {
  case ${1} in
    /*) echo "${1}" ;;
    *)  echo "${PWD}/${1}";;
  esac
}

symtree() {
  ${FIND} | (
    read NAME || true
    while [ "$NAME" != "" ]; do
      if ! [ -e "$unisrc/$NAME" ]; then
        if [ -d "$NAME" ]; then
          mkdir -p "$unisrc/$NAME"
        else
          ln -s "$1/$NAME" "$unisrc/$NAME"
	fi
      fi
      read NAME || true
    done
  )
}

# If we are on a mac, we want to run a different find command
if [ "$(uname -s 2>/dev/null)" = "Darwin" ]; then
  FIND="find -f ."
else
  FIND="find"
fi

unisrc=$(absolutedir "$1")
shift
mkdir -p "${unisrc}"
startdir="${PWD}"

for i in $*; do
  cd "${startdir}"
  dir=$(absolutedir "$i")
  cd "$dir"
  symtree "$dir"
done

